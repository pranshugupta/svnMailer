<UserControl x:Class="SVNMailer.LogTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="1160">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,5">
            <TextBlock Text="Copy and paste SVN log content in the below textbox and then click the Button -->" FontSize="20"/>
            <Button Content="Load SVN Log" FontWeight="SemiBold" Name="LoadSVNLogButton" Click="LoadSVNLogButton_Click" FontSize="15" Width="150" HorizontalAlignment="Right" Margin="10,0,10,0"/>
        </StackPanel>
        <TextBox Name="SVNLogTextBox" TextWrapping="Wrap" Height="550" AcceptsReturn="True"/>
    </DockPanel>
</UserControl>